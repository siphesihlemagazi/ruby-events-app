<%= stylesheet_link_tag "events", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

<h2>Log in</h2>

<br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email...", class:"field" %>
  </div>
  <br />
  <div>
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password...", class:"field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn" %>
  </div>
<% end %>
  <br />
<%= render "devise/shared/links" %>
