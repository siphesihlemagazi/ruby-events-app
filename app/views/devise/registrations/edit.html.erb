<%= stylesheet_link_tag "events", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

<h2>Edit Profile <% resource_name.to_s.humanize %></h2>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email...", class:"field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div>
    <p>Leave blank if you don't want to change it</p>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password...", class:"field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Retype password...", class:"field" %>
  </div>

  <div>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Retype password...", class:"field" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Update", class:"btn" %>
  </div>
<% end %>
<br>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"d-btn" %></p>

<br>
<%= link_to "Back", :back %>
